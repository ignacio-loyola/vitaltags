model Condition {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  name_en   String
  slug      String   @unique
  system    String?
  code      String?
  onsetDate DateTime?
  note      String?
  createdAt DateTime @default(now())

  @@index([profileId])
}

model Medication {
  id        String   @id @default(cuid())
  profileId String
  profile   Profile  @relation(fields: [profileId], references: [id])
  name_en   String
  slug      String   @unique
  system    String?
  code      String?
  doseText  String?
  note      String?
  createdAt DateTime @default(now())

  @@index([profileId])
}

model Allergy {
  id          String   @id @default(cuid())
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id])
  name_en     String
  slug        String   @unique
  system      String?
  code        String?
  criticality String?
  note        String?
  createdAt   DateTime @default(now())

  @@index([profileId])
}

model TermI18n {
  slug      String   @id
  lang      String
  label     String
  updatedAt DateTime @default(now())
}


